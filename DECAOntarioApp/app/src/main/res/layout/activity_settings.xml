<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="16dp"
                android:text="About"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size_body"
                android:gravity="start|center_vertical"/>

            <ca.deca.decaontarioapp.ui.views.AvatarListItem
                android:id="@+id/settings_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_button_style"
                app:avatarColor="@color/material_amber_500"
                app:avatarSrc="@drawable/ic_user"
                app:textMain="Created by" />

            <ca.deca.decaontarioapp.ui.views.AvatarListItem
                android:id="@+id/settings_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_button_style"
                app:avatarColor="@color/material_blue_500"
                app:avatarSrc="@drawable/ic_email"
                app:textMain="Get in touch"/>

            <ca.deca.decaontarioapp.ui.views.AvatarListItem
                android:id="@+id/settings_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_button_style"
                app:avatarColor="@color/material_pink_500"
                app:avatarText="V"
                app:textMain="Build Version"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>